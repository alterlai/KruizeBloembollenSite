<div class="container content clearfix">
	<div class="section">
		<h1 class="title">{{record.title}}</h1>	
		{{record.content}}
	</div>
	<div class="section">
		<div class="nav-cards">
			{% for card in record.links %}
			<div class="card">
				<figure>
					<img src="{{ card.background|image }}">
					<div class='card-text'>
						<h2>{{card.title}}</h2>
						<p>
							{{card.description}}
						</p>
